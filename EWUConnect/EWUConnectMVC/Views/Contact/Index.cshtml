@model EwuConnect.Domain.Models.ContactViewModel.ContactViewModel

<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
<link href="css/contact.css" rel="stylesheet" type="text/css" />

<form method="post" id="sendMailForm">
	<div class="container1">
		<div class="bootstrapGrid">
			<div class="row">
				<div class="col-sm-12">
					<h1>Contact Us</h1>
				</div>
			</div>
			<div class="row">
				<div class="col-6">
					<input asp-for="FirstName" placeholder="First Name" class="wide" style="min-width : 100%" />
					<span asp-validation-for="FirstName" class="field-validation-valid text-danger"
						  data-valmsg-replace="true">
					</span>
				</div>
				<div class="col-sm-6">
					<input asp-for="LastName" placeholder="Last Name" class="wide" style="min-width : 100%" />
					<span asp-validation-for="LastName" class="field-validation-valid text-danger"
						  data-valmsg-replace="true">
					</span>
				</div>
			</div>
			<div class="row">
				<div class="col-lg-12">
					<input asp-for="Email" placeholder="Email" class="wide" style="min-width : 100%" />
					<span asp-validation-for="Email" class="field-validation-valid text-danger"
						  data-valmsg-replace="true">
					</span>
				</div>
			</div>
			<div class="row">
				<div class="col-lg-12">
					<TextArea asp-for="Comment" placeholder="Message" rows="10" style="min-width : 100%"></TextArea>
					<span asp-validation-for="Comment" class="field-validation-valid text-danger"
						  data-valmsg-replace="true">
					</span>
				</div>
			</div>
			<div class="row">
				@if (Model != null && Model.FirstName != null && Model.LastName != null && Model.Email != null && Model.Comment != null)
				{
					if (Model.isSent)
					{
						@Html.Partial("_SuccessValidation");
					}
					else
					{
						@Html.Partial("_ErrorValidation");
					}
				}

			</div>
			<div class="row">
				<div class="col-sm-6">
					<div class="float-right">
						<button type="submit" id="submitContactBtn" class="btn btn-primary btn-lg">
							Submit
						</button>
					</div>
				</div>
				<div class="col-sm-6">
					<div class="float-left">
						<a asp-page="/Home/Mentor" class="btn btn-info btn-lg">Become a Mentor</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</form>

