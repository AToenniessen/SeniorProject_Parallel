@model EWUConnectMVC.Models.Contact.ContactViewModel

<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
<link href="css/contact.css" rel="stylesheet" type="text/css" />

<form method="post">
	<div class="container1">
		<div class="bootstrapGrid">
			<div class="row">
				<div class="col-sm-12">
					<h1>Contact Us</h1>
				</div>
			</div>
			<div class="row">
				<div class="col-6">
					<input asp-for="FirstName" placeholder="First Name" class="wide" style="min-width : 100%" />
					<span asp-validation-for="FirstName" class="text-muted"></span>
				</div>
				<div class="col-sm-6">
					<input asp-for="LastName" placeholder="Last Name" class="wide" style="min-width : 100%" />
					<span asp-validation-for="LastName" class="text-muted"></span>
				</div>
			</div>
			<div class="row">
				<div class="col-lg-12">
					<input asp-for="Email" placeholder="Email" class="wide" style="min-width : 100%" />
					<span asp-validation-for="Email" class="text-muted"></span>
				</div>
			</div>
			<div class="row">
				<div class="col-lg-12">
					<TextArea asp-for="Comment" placeholder="Message" rows="10" style="min-width : 100%"></TextArea>
					<span asp-validation-for="Comment" class="text-muted"></span>
				</div>
			</div>
			<div class="row">
				@if (ViewBag.Message != null)
				{
					if (ViewBag.Message == "success")               //continue from here boi. try to display a partial view from returned value in contactcontroller
					{
						await Html.PartialAsync("_SuccessValidation");
					}
					else
					{
						await Html.PartialAsync("_ErrorValidation");
					}
				}


			</div>
			<div class="row">
				<div class="col-sm-6">
					<div class="float-right">
						<button type="submit" id="submitContactBtn" class="btn btn-primary btn-lg">
							Submit
						</button>
					</div>
				</div>
				<div class="col-sm-6">
					<div class="float-left">
						<a asp-page="/Home/Mentor" class="btn btn-info btn-lg">Become a Mentor</a>
					</div>
				</div>
			</div>

		</div>
	</div>
</form>

