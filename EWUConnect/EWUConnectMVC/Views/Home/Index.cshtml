@{
	ViewData["Title"] = "EWU Connect";
}

<asp:Content ID="LandingPage" ContentPlaceHolderID="LandingPage" class="masthead body">
	<link rel="stylesheet" href="css/index.css" type="text/css" media="screen" />

	<div class="container1">
		<div class="bootstrapGrid">
			<div class="row">
				<div class="col-sm-12">
					<h1 style="font-size: 200%">
						EWU Connect
					</h1>
				</div>
				<div class="col-sm-12">
					<h4>Connecting Real World Skill With Tomorrows Leaders</h4>
				</div>
			</div>
			<div class="row buttons">
				<div class="col-sm-6">
